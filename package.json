{
  "name": "slh",
  "version": "0.2.1",
  "description": "Store like in Hyperapp",
  "main": "dist/index.js",
  "author": "Alex Maslakov",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmas/slh.git"
  },
  "keywords": [
    "store",
    "state",
    "actions"
  ],
  "license": "MIT",
  "scripts": {
    "test": "mocha test/",
    "build": "npm run bundle && npm run minify",
    "codestyle": "eslint {src,test}/*.js",
    "format": "prettier --semi false --single-quote true --write {src,test}/*.js",
    "bundle": "rollup -i src/index.js -o dist/index.js -m -f umd -n slh",
    "minify": "uglifyjs dist/index.js -o dist/index.js -mc pure_funcs=['Object.defineProperty'] --source-map includeSources,url=index.js.map",
    "release": "npm run codestyle && npm run build && npm run test && git commit -am $npm_package_version && git tag $npm_package_version && git push --tags && npm publish"
  },
  "files": [
    "dist",
    "slh.d.ts"
  ],
  "babel": {
    "presets": "env"
  },
  "typings": "slh.d.ts",
  "dependencies": {},
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.19.1",
    "mocha": "^5.0.5",
    "prettier": "^1.11.1",
    "rollup": "^0.57.1",
    "uglify-js": "^3.3.16"
  }
}
